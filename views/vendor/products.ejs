<%- include('../vendor-partials/head.ejs') %>
<link rel="stylesheet" href="/css/vendor/products.css"/>
<body class="vendorPage">
    <%- include('../vendor-partials/vendor-sidebar.ejs') %>

    <section class="section events dashboard" id="events">

        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>
        
            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div>
        </div> 
        
        <div class="container">
            <div class="row">
            <div class="col-lg-12 text-center">
                <div class="section-heading">
                <h2>Products</h2>
                </div>
            </div>

            <% products.forEach(function(product){ %>

                <div class="col-lg-12 col-md-6">
                    <div class="item">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="image">
                                    <img src="data:<%= product.photo.contentType %>;base64,<%= product.photo.data.toString('base64') %>" alt="">
                                </div>
                            </div>
                            <div class="col-lg-9">
                                <ul>
                                    <li>
                                    <span class="category"><%= product.category %></span>
                                    <h4><%= product.name %></h4>
                                    </li>
                                
                            
                                    <li>
                                    <span>Price:</span>
                                    </li>

                                    <li>
                                        <h6><%= product.price %> AUD</h6>
                                    </li>
                                </ul>
                                <a href="/api/vendor/productDetail"><i class="fa fa-angle-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            
            <% }); %>

            </div>
            <div class="d-grid d-md-flex justify-content-md-end" style="margin-bottom: 24px">
                <a href="/api/vendor/addproduct">
                    <button name="addProduct" class="btn btn-primary me-md-2" type="button">Add product</button>
                </a>
            </div>
        </div>
    </section>
    <script src="/js/vendor/script.js"></script>






</body>

<%- include('../vendor-partials/vendor-footer.ejs') %>

</html>