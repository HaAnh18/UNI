<%- include('../vendor-partials/head.ejs') %>
<link rel="stylesheet" href="/css/vendor/signup.css"/>

<body>
    <div class="container">
        <div class="forms">
            <form>
                <!-- Registration Form -->
                <div class="form signup">
                    <span class="title">Registration</span>
              
                        <div class="input-field">
                            <input name="username" type="text" placeholder="Enter username" required>
                            <i class="uil uil-user"></i>
                        </div>
                        <div class="input-field">
                            <input name="password" type="password" class="password" placeholder="Enter password" required>
                            <i class="uil uil-lock icon"></i>
                            <i class="uil uil-eye-slash showHidePw"></i>
                        </div>
                        <div class="input-field">
                            <input name="businessName" type="text" placeholder="Enter business name" required>
                            <i class="uil uil-house-user"></i>
                        </div>
                        <div class="input-field">
                            <input name="businessAddress" type="text" placeholder="Enter business address" required>
                            <i class="uil uil-building"></i>
                        </div>

                        <div class="input-field button">
                            <button type="button" class="text next">Next</button>
                        </div>
                   
                    <div class="login-signup">
                        <span class="text">Already a member?
                            <a href="/vendor/login" class="text login-link">Login Now</a>
                        </span>
                    </div>
                </div>
                <!-- Profile Picture input -->
                <div class="form image">
 
                    <span class="title">Registration</span>
                    <div class="upload-img">
                        <div class="profile-image-container visual">
                            <label for="upload-file"></label>
                            <img src="/images/vendor/vendorLogin.png" alt="Profile Image" id="profile-image">
                            
                            <input name="vendorPicture" type="file" id="upload-file" accept="jpeg, jpg, png" onchange="readURL(this);">
                        </div>
                    </div>
                    <div class="input-field button">
                        <button type="button" class="text back">Back</button>
                    </div>
                    <div class="input-field button">
                        <button type="submit">Submit</button>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>
        
 
  <script src="/js/vendor/login.js"></script>




</body>



</html>