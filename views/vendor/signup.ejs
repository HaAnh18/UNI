<%- include('../vendor-partials/head.ejs') %>
<link rel="stylesheet" href="/css/vendor/signup.css"/>

<body>
    <div class="container">
        <div class="forms">
            <form method="POST" action="/api/vendor/signup" enctype="multipart/form-data" >
                <!-- Registration Form -->
                <div class="form signup">
                    <span class="title">Registration</span>

                        <div class="upload-img">
                            <div class="profile-image-container visual">
                                <label for="upload-file"></label>
                                <img src="/images/vendor/vendorLogin.png" alt="Profile Image" id="profile-image">
                                
                                <input name="image" id="upload-file" type="file" accept="jpeg, jpg, png" onchange="readURL(this);">
                            </div>
                        </div>

                        <div class="field username-field">
                            <div class="input-field">
                                <input name="username" class="username" type="text" placeholder="Enter username" required>
                                <i class="uil uil-user"></i>
                            </div>
                            <!-- <span class="error username-error">
                                <p class="error-text">Please enter a valid username</p>
                              </span> -->
                        </div>
                        <div class="field create-password">
                            <div class="input-field">
                              <input
                                type="password"
                                placeholder="Create password"
                                class="password"
                                name="password"
                                required
                              />
                              <i class="bi bi-shield-lock"></i>
                              <i class="bi bi-eye-slash bi-eye-fill showHidePw"></i>
                              
                            </div>
                            <!-- <span class="error password-error">
                              <p class="error-text">
                                Please enter a valid password</p>
                            </span> -->
                          </div>
                          
                        <div class="input-field">
                            <input name="name" type="text" minlength="5" placeholder="Enter business name" required>
                            <i class="uil uil-house-user"></i>
                        </div>
                        <div class="input-field">
                            <input name="address" type="text" minlength="5" placeholder="Enter business address" required>
                            <i class="uil uil-building"></i>
                        </div>

                        <div class="input-field button">
                            <button type="submit" class="text">Submit</button>
                        </div>
                   
                        <div class="login-signup">
                            <span class="text">Already a member?
                                <a href="/api/vendor/signin" class="text login-link">Login Now</a>
                            </span>
                        </div>
                </div>
            </form>
        </div>
    </div>
        
 
  <script src="/js/vendor/login.js"></script>




</body>



</html>