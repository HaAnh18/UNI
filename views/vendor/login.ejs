<title>Login</title>
<!-- Include head file with scriptlet tag -->
<%- include('../vendor-partials/head.ejs') %>
<link rel="stylesheet" href="/css/vendor/login.css"/>

<body>

    <div class="container">
        <% if(typeof message != "undefined" && message) { %>
            <div class="mt-3">
                <div class="alert alert-danger alert-dismissible" role="alert">
                       <div>	<%= message %></div>
                       <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        <%}%>
            <div class="form login">
                <span class="title">Login</span>
                <form method="POST" action="/api/vendor/signin">
                    <div class="input-field">
                        <input name="username" type="text" placeholder="Enter username" required>
                        <i class="uil uil-user"></i>
                    </div>
                    <div class="input-field">
                        <input name="password" type="password" class="password" placeholder="Enter password" required>
                        <i class="uil uil-lock icon"></i>
                        <i class="bi bi-eye-slash bi-eye-fill showHidePw"></i>
                    </div>
                    <div class="input-field button">
                        <button type="submit" class="text">Login</button>
                    </div>
                </form>
                <div class="login-signup">
                    <div class="text">Not a member?
                        <a href="/api/vendor/signup" class="text signup-link">Signup Now</a>
                    </div>
                    <div class="text">
                        <a href="/api/customer/homepage" class="text signup-link">Back to homepage</a>
                    </div>
                </div>
            </div>


    </div>
        
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
<script src="/js/vendor/login.js"></script>




</body>
</html>