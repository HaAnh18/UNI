<%- include('../vendor-partials/head.ejs') %>
<link rel="stylesheet" href="/css/vendor/orders.css"/>
<body class="vendorPage">
  <%- include('../vendor-partials/vendor-sidebar.ejs') %>

  <section class="dashboard">
    <div class="top">
      <i class="uil uil-bars sidebar-toggle"></i>
    </div> 
    
    <div class="dash-content">
  
      <div class="activity">
        <div class="title">
            <i class="bi bi-search"></i>
          <span class="text">Order Detail</span>
        </div>

        
  
        <div class="card px-2">
          <div class="card-header bg-white">
            <div class="row justify-content-between">
    
            <div class="col">
              <p class="text-muted"> Order ID  <span class="font-weight-bold text-dark">#<%= order.id %></span></p> 
              <div class="flex-col my-auto">
              </div>
            </div>
    
          </div>
          <div class="card-body">
    
              <% order.products.forEach(function(product){ %>
    
                <div class="media flex-column flex-sm-row">
    
                  <div class="media-body ">
                    <h5 class="bold"><%= product.productName %></h5>
                    <p class="text-muted"> Quantity: <%= product.quantity %></p>
                  </div>  
                </div>
                
              <% }); %>
    
          </div>
          <h4 class="mt-3 mb-4 bold"><%= order.total %> AUD <span class="small text-muted"> via (COD) </span></h4>
    
    
          <div class="card-footer bg-white px-sm-3 pt-sm-4 px-0">
            <h5 class="bold mb-3">Delivery Status</h5>
            <% if (order.status == "Pending")  { %>
              <div class="row text-center">
                <a href="/api/vendor/order/<%=order.id %>/changestatus">
                  <div class="btn btn-warning mr-4"><%= order.status %></div>
                </a>							
              </div>
            <% } else { %>
              <% if (order.status == "Active") { %>
                <!-- Code to be executed if condition1 is true -->
                <div class="btn btn-success mr-4"><%= order.status %></div>
              <% } else if (order.status == "Cancelled") { %>
                  <!-- Code to be executed if condition1 is false and condition2 is true -->
                  <div class="btn btn-danger mr-4"><%= order.status %></div>
              <% } else { %>
                <!-- Code to be executed if both condition1 and condition2 are false -->
                <div class="btn btn-info mr-4"><%= order.status %></div>
              <% } %>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script src="/JS/vendor/script.js"></script>
      




</body>

<%- include('../vendor-partials/vendor-footer.ejs') %>

</html>

