<%- include('../vendor-partials/head.ejs') %>
<link rel="stylesheet" href="/css/vendor/addProduct.css"/>
<body class="vendorPage">
    <%- include('../vendor-partials/vendor-sidebar.ejs') %>

    <section class="section dashboard" id="events">
        
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i>
        
            <div class="search-box">
                <i class="uil uil-search"></i>
                <input type="text" placeholder="Search here...">
            </div>
        </div> 
    
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="section-heading">
                    <h2>Add your product</h2>
                    </div>
                </div>
                <div class="container">
                    <section class="card">
                        <form class="row g-3"  method="POST" action="/api/vendor/addproduct" enctype="multipart/form-data">
                            <div class="col-md-6">
                                <label for="name" class="form-label">Product name</label>
                                <input name="name" id="name" type="text" class="form-control" required>
                            </div>

                            <div class="col-12">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="description" value="Hello World" type="text" maxlength="500" class="form-control" cols="30"
                                rows="10" required></textarea>
                            </div>

                            <div class="col-md-4">
                                <label for="category" class="form-label">Category</label>
                                <select name="category" class="form-select" required> 
                                    <option selected disabled> Select Category</option>
                                    <option id="clothing" value="Clothing">Clothing</option>
                                    <option id="book" value="Book">Book</option>
                                    <option id="electronic" value="Electronic">Electronic</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label for="price" class="form-label">Price</label>
                                <input name="price" min="0" id="price" type="number" class="form-control" required>
                            </div>
                        
                        
                            <div class="profile-image-container visual">
                                <label for="image"></label>
                                <input type="file" id="image" name="image" required accept="jpeg, jpg, png" onchange="readURL(this);">
                                <img src="/images/vendor/vendorLogin.png" alt="Profile Image" id="profile-image">
                            </div>

                            

                            <div class="d-grid d-md-flex justify-content-md-start">
                                <button class="btn btn-primary btn-lg" type="submit">Add your product!</button>
                            </div>
                        </form>
                    </section> 
                </div>
            </div>
        </div>
    </section>
    <script src="/JS/vendor/script.js"></script>
    <script src="/JS/vendor/login.js"></script>
</body>
<%- include('../vendor-partials/vendor-footer.ejs') %>
</html>