    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">


                    <a class="breadcrumb-item text-dark text-underline-mod" href="/api/customer/homepage" >Home</a>
                    <a class="breadcrumb-item text-dark text-underline-mod" href="/api/customer/shop" ><%= product.category %></a>
                    <span class="breadcrumb-item active"><%= product.name %></span>
                    
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Shop Detail Start -->
