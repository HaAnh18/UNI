                    <div class="carousel-inner-detail bg-light">
                        <div class="carousel-item active">
                            <img class="w-100 h-100 img-fit" src="data:<%= product.photo.contentType %>;base64,<%= product.photo.data.toString('base64') %>" alt="Image">
                        </div>
                        <div class="carousel-item ">
                            <img class="w-100 h-100 img-fit" src="data:<%= product.photo.contentType %>;base64,<%= product.photo.data.toString('base64') %>" alt="Image">
                        </div>
                        <div class="carousel-item ">
