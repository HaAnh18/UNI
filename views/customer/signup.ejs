<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - UNI Store</title>
  
  	<link rel="stylesheet" type="text/css" href="/css/customer/login/css-login/bootstrap.min.css">
  	<link rel="stylesheet" type="text/css" href="/css/customer/login/css-login/bootstrap-icons.css">
  	<link rel="stylesheet" type="text/css" href="/css/customer/login/css-login/login-custom.css">
	
	
  </head>

  <body>

	

    <main class="text-white">
    	<h1 class="h2 text-center pt-3 pb-2"> UNI Store</h1>
  		<div class="content row mx-auto" >
  			
  			<div class="form-container col-md-6 " >
                <!--extra button to switch between signin & signup-->
  				<!--<div onclick="show_login()" class="login-button button-selected">Login</div>
  				<div onclick="show_signup()" class="signup-button">Signup</div>-->

  				<div class="">
  					<h2 class="fx-animate-1">Signup</h2>
						<h5 class="fx-animate-3">Please enter your details</h5>
					<!--Login section-->
					<form class="js-login-form pt-4 p-4" method="POST" action="/api/customer/signup" enctype="multipart/form-data">
  						
						<div class="form image">
							<div class="upload-img">
								<div class="profile-image-container visual">
									<label for="upload-file"></label>									
									<input name="image" type="file" id="upload-file" accept="jpeg, jpg, png" onchange="readURL(this);">
								</div>
							</div>
							
						</div>

					  <!--Username-->
						<div class="input-group mb-4 fx-animate-1" >
						<input type="text" class="form-control p-3" placeholder="Username" id="contact-s-username" name="username" onkeyup="validateSUsername()" required>
						<span class="input-group-text" id="basic-addon2"><i class="bi bi-person"></i></span>
						<!--error message-->
						<span id="s-username-error"></span>
					  </div>

					  <!--Password-->
					  <div class="input-group mb-4 fx-animate-2">
						<input type="password" class="form-control p-3" placeholder="Password" id="contact-s-password" name="password" onsubmit="validateSPassword()" required> 
						<span class="input-group-text" id="basic-addon2"><i class="bi bi-key"></i></span>
						<!--error message-->
						<span id="s-password-error"></span>
					  </div>
					  
					  <!--Name-->
					  <div class="input-group mb-4 fx-animate-4">
						<input type="text" class="form-control p-3" placeholder="Name" id="contact-s-address" name="name" onkeyup="validateSName()" required> 
						<span class="input-group-text" id="basic-addon2"><i class="bi bi-clipboard-minus"></i></span>
						<!--error message-->
						<span id="s-address-error"></span>
					  </div>

					  <!--Address-->
					  <div class="input-group mb-4 fx-animate-3">
						<input type="text" class="form-control p-3" placeholder="Address" id="contact-s-address" name="address" onkeyup="validateSAddress()" required> 
						<span class="input-group-text" id="basic-addon2"><i class="bi bi-house"></i></span>
						<!--error message-->
						<span id="s-address-error"></span>
					  </div>

					  <div class="mb-4 fx-animate-3">
						  <button class="btn btn-lg btn-outline-warning" type="submit" onclick="return validateSForm()">Sign up</button>
					  </div>
					  <div class="mb-4 fx-animate-5 text-viva">
						   Already have an account?<a class="text-viva" href="#">Log in</a>
					  </div>

					  <!--take me back button-->

					  <div>
					  
						  <div class="d-flex">
							  <div class="me-2 fx-animate-4"><a href="/api/customer/index"><i class="h3 text-white bi bi-arrow-left"></i></a></div>
						  </div>

					  </div>

					</form>
  					
  				</div>
  			</div>
  		</div>
    	
    </main>

  </body>

<!--custom js file-->
<script src="/js/customer/login/js-login/login.js"></script>  
<!--icon-->
<script src="https://kit.fontawesome.com/c4254e24a8.js"></script>


</html>
