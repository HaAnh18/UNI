<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>UNI Store - multi vendor marketplace</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">  

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/css/customer/animate/animate.min.css" rel="stylesheet">
    <link href="/css/customer/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/css/customer/main/css/style.css" rel="stylesheet">
</head>

<!--header-->
<%- include('../customer-partials/header/header-user.ejs') %>

<body>
    


    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">


                    <a class="breadcrumb-item text-dark text-underline-mod" href="#" >Home</a>
                    <a class="breadcrumb-item text-dark text-underline-mod" href="#" ><%= customer.name%>'s Profile</a>
                    <a class="breadcrumb-item text-dark text-underline-mod" href="#" >Shopping Cart</a>

                    <span class="breadcrumb-item active">Checkout</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Checkout Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">

            <!--Bills & Payment-->
            <div class="col-lg-4">
                <!--Bills-->
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Total</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom">
                        <h6 class="mb-3">Products</h6>
                        <% for (var i = 0; i< orders.length; i++) { %>
                            <div class="d-flex justify-content-between">
                                <p>Vendor: </p>
                                <p><%= orders[i][0].vendor %></p>
                            </div>
                        
                            <% for (var n = 0; n< orders[i].length; n++) { %>
                                <div class="d-flex justify-content-between">
                                    <p><%= orders[i][n].product %></p>
                                    <p><%= orders[i][n].price %> AUD x <%= orders[i][n].quantity %></p>
                                </div>
                            <% } %>
                        <% } %>
                            
                    </div>
                    <div class="border-bottom pt-3 pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Subtotal</h6>
                            <h6><%= total %> AUD</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">FREE</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5><%= total %> AUD</h5>
                        </div>
                    </div>
                </div>
                <!--Payment-->
                <div class="mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Payment</span></h5>
                    <div class="bg-light p-30">

                        <button class="btn btn-block btn-primary font-weight-bold py-3"> Place Order</button>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Checkout End -->


    <!--footer-->
    <%- include('../customer-partials/footer/footer.ejs') %>


    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="/js/customer/easing/easing.min.js"></script>
    <script src="/js/customer/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="/js/customer/mail/jqBootstrapValidation.min.js"></script>
    <script src="/js/customer/mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="/js/customer/main/js/main.js"></script>
</body>

</html>